<head>
    <meta charset="utf-8">
    <title>Home Page</title>
    <link rel="stylesheet" href="/stylesheets/header.css"> 
    <link rel='icon' href='/images/logo.png' sizes='any'>
</head>
 
<header>
    <nav>
        <ul class="navbar-nav navbar-right">
            <% if(currentUser != null) { %>
                <img src='/images/profile.png'>
                <li><a class="navbar-brand" href="/">Mankara</a></li>
                <li><a href="#">Welcome <%= currentUser %>  ! you are an <%=userType%></a></li>
                <li><a href="/journal">Journal</a></li>
                <li><a href="/logout">Logout</a></li>
            <%}else{%>
                <li><a class="navbar-brand" href="/">Mankara</a></li>
                <li><a href="/forgotPassowrd">Forgot Password</a></li>
                <li><a href="/signup">Signup</a></li>
                <li><a href="/login">Log In</a></li>
            <% } %>
        </ul>
    </nav>

    <% let dashboard=''%>
                  
    <% switch(userType){
        case 'Admin': %>
       <% dashboard='admin'%>
        <%break;
        case 'Accountant': %>
        <% dashboard='accountant'%>
        <%break;
        case 'Manager': %>
        <% dashboard='manager'%>
        <%break;
    }%>
        <%if(!locals.isDashboard && currentUser != null){%>
            <% let dashboardLink=`/${dashboard}/dashboard`%>
            <a href=<%=dashboardLink%>><img src='/images/logo.png'></a>
            <%}else{%>      
                 <img src='/images/logo.png'> 
            <%}%> 
</header>