<!DOCTYPE html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit User</title>
        <link rel='stylesheet' href='/stylesheets/allusers.css'>
        <link rel='icon' href='/images/logo.png' sizes='any'>
    </head>
    <body>
        <%- include('../_partial/_header'); -%>
        <h1>Edit User</h1>
        <div class="tablecontainer">
            <div class="container">
                <table>
                    <tbody>
                        <th style="width: 14.2857%; height: 18px; text-align: center;">Username</th>
                        <th style="width: 14.2857%; height: 18px; text-align: center;">First Name</th>
                        <th style="width: 14.2857%; height: 18px; text-align: center;">Last Name</th>
                        <th style="width: 14.2857%; height: 18px; text-align: center;">Email</th>
                         <th style="width: 14.2857%; height: 18px; text-align: center;">DOB</th>
                         <th style="width: 14.2857%; height: 18px; text-align: center;">PED</th>
                         <th style="width: 14.2857%; height: 18px; text-align: center;">User Type</th>
                         <th style="width: 14.2857%; height: 18px; text-align: center;">Status</th>   
                        <tr>
                            <form action="./edit" method="POST">
                            <td>
                                <input readonly type="text" name="username" value="<%=USERNAME%>">
                            </td>
                            <td>
                                <input type="text" name="firstname" id="inputFirstName" value="<%=FIRSTNAME%>">
                            </td>
                            <td>
                                <input type="text" name="lastname" id="inputLastName" value="<%=LASTNAME%>">
                            </td>
                            <td>
                                <input type="text" name="email" id="inputEmail" value="<%=EMAIL%>"  >
                            </td>
                            <td>
                                <input type="text" name="DOB" id="inputDOB" value="<%=DOB%>">
                            </td>
                            <td>
                                <input type="text" name="PED" id="inputPED" value="<%=PED%>">
                            </td>
                            <td style="width: 14.2857%; height: 18px; text-align: center;" >
                                <select value = "<%=USERTYPE%>" name="usertype" id="inputUserType">
                                    <option value="<%=USERTYPE%>" 'selected':'' ><%=USERTYPE %></option>
                                    <% if(USERTYPE == 'Accountant'){  %>
                                        <option value="Manager">Manager</option>
                                    <% }  else { %>
                                        <option value="Accountant">Accountant </option>
                                    <% } %>
                                </select>
                            </td>
                            <td style="width: 14.2857%; height: 18px; text-align: center;" >
                                <select value = "<%=APPROVED%>" name ="approved" id="inputApproved">
                                    <option value="<%=APPROVED%>" 'selected':'' ><%=APPROVED%></option>
                                    <% if(APPROVED == 'Active'){  %>
                                        <option value="0">Inactive</option>
                                    <% }  else { %>
                                        <option value="1">Active </option>
                                    <% } %>
                                </select>
                            </td>
                            <td>   <button type="submit">Submit Changes</button></td>
                        </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>