<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/statements/balanceSheet.css'>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Balance Sheet</title>
</head>
<%- include('../_partial/_header'); -%>

<body>
<div>-------------------------------------------------------------------</div>
<table>
    <tr><th>Current Assets</th></tr>
    <% data.asset.TextRow.forEach(element=>{%>
        <tr>
            <td><%=`${element.NAME}|${element.BALANCE}`%></td>
        </tr>
     <%})%>
    <tr><th>Non-CurrentAsset</th></tr>
    <tr><td>Total Assets</td></tr>
    <tr><td><%=totals.asset%></td></tr>
</table>

<table>
    <tr><th>Current Liabilites</th></tr>
    <% data.liability.TextRow.forEach(element=>{%>
        <tr>
            <td><%=`${element.NAME}|${element.BALANCE}`%></td>
        </tr>
     <%})%>
    <tr><th>Non-Current Liabilites</th></tr>
    <td>Total Liabilites</td>
    <tr><td><%=totals.liability%></td></tr>
    <tr><th>StockHolders Equity</th></tr>
    <% data.equity.TextRow.forEach(element=>{%>
        <tr>
            <td><%=`${element.NAME}|${element.BALANCE}`%></td>
        </tr>
     <%})%> 
    <tr><td>Total Equity</td></tr>
    <tr><td><%=totals.equity%></td></tr>
    <td>Total liabalities &Equity</td>
    <tr><td><%=`${totals.equity+totals.liability}`%></td></tr>
</table>
</body>
</html>