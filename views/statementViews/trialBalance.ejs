<!DOCTYPE html>

<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/charts/viewChart.css'>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trial Balance</title>
</head>
<%- include('../_partial/_header'); -%>
<%- include('../_partial/help/viewChartHelp'); -%>
<body>
    <h1>Trial Balance</h1>
<table id=table>
    <th class="tooltip" id='Account Title'> Account Title</th>
    <th class="tooltip" id='Debit'> Debit</th>
    <th class="tooltip" id='Credit'> Credit</th>
    <tr>
        <%   let formatter = new Intl.NumberFormat('en-US',{ style: 'currency',  currency: 'USD',   }); %>
        <%let creditTotal=0%>
        <%let debitTotal=0%>
        <%TextRow.forEach(element=>{%>
          <tr>
            <td><%=element.NAME%></td>
            <%if(element.COLUMN=='Debit'){%>
                <td><%=formatter.format(element.BALANCE)%></td>
                <td></td>
                <%debitTotal+=element.BALANCE%>
            <%}else{%>
                <td></td>
                <td><%=formatter.format(element.BALANCE)%></td>
                <%creditTotal+=element.BALANCE%>
            <%}%>
          </tr>
        <%})%>
        <td>Total</td>
        <td><%=formatter.format(debitTotal)%></td>
        <td><%=formatter.format(creditTotal)%></td>
    </tr>
</table>
  
    <%- include('../_partial/_footer'); -%>
            
</body>
</html>