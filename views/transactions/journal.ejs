<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Journal</title>
    <link rel='stylesheet' href='/stylesheets/transactions/journal.css'>
</head>
<%- include('../_partial/_header'); -%>
<%let addJournalLink=`/./${userType.toLowerCase()}/createJournal`%>

    <button><a href=<%= addJournalLink%>>Create a journal entry</a></button>
    <body>
        <form id ='form' action='' METHOD='POST'>
            <table id='table'>
            <tr>
                <th>Date</th>
                <th>Account Names</th>
                <th>Debits</th>
                <th>Credits</th>
                <th>Description</th>
                <th>Transaction ID</th>
                <th>Creator</th>
                <th>Status</th>
            </tr>
            <%TextRow.forEach(element=>{%>
                <tr>
                    <td>
                        <%=element.DATE%>
                    </td>
                    <td>
                        <a href=<%= "./ledger/"+element.ACCOUNT%>> <%=element.ACCOUNT%> </a>
                    </td>
                    <td>
                        <%=element.DEBIT%>
                    </td>
                    <td>
                        <%=element.CREDIT%>
                    </td>
                    <td>
                        <%=element.DESCRIPTION%>
                    </td>
                    <td>
                        <%=element.ID%>
                    </td>
                    <td>
                        <%=element.USERNAME%>
                    </td>
                    <td>
                        <%=element.STATUS%>
                    </td>
                </tr>
                <% })%>
        </table>
        <script src='/ejsscripts/viewJournal.js'></script>

    </body>

</html>