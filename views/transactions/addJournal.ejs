<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Journal</title>
    <link rel='stylesheet' href='/stylesheets/transactions/journal.css'>
</head>
<%- include('../_partial/_header'); -%>

    <body>
        <form id='form' action='' METHOD='POST'>
            <datalist id='AccountNamesList'>
                <!-- Add account names from a query here -->
                <option value="Happy">
                <option value="Sad">
                <option value="Excited">
                <option value="Nervous">
                <option value="Bordeom">
            </datalist>
            <table id='table'>
                <tr>
                    <th>#</th>
                    <th>Account</th>
                    <th>Debits</th>
                    <th>Credits</th>
                    <th>Description</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td><input required name='Account' type='text' list='AccountNamesList'></td>
                    <td><input required name='Debits' min=0 type='number'></td>
                    <td><input required name='Credits' min=0 type='number'></td>
                    <td><input required name='Description' type='text'></td>
                </tr>
                <tr id='totalRow'>
                    <td><b>TOTALS</b></td>
                    <td></td>
                    <td id='totalDebit'></td>
                    <td id='totalCredit'></td>
                    <td colspan="2" id='balanceMessage'></td>
                </tr>
                <button id='submitButton' type='submit' value='submit'>Create Journal Entry</button>
        </form>
        <button id='resetButton' type='reset'>Reset</button>
        </table>
        <td><button id='addAccount'>Add Account</button></td>

        <script src='/ejsscripts/transactions/journalScript.js'></script>
    </body>

</html>