<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/charts/addAccount.css'>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Account</title>
</head>
<%- include('../_partial/_header'); -%>

<body>
    <div id='AllTables'>
        <h1><%=NAME%> :<%=NUMBER%></h1>
        <div id='AccountInfo'>
            <h2>All Account Info</h2>
            <table id='allInfoTable'>
                <tr>
                    <th>Name</th>
                    <td><%=NAME%></td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td><%=NUMBER%></td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td><%=DESCRIPTION%></td>
                </tr>
                <tr>
                    <th>Normal Side</th>
                    <td><%=NORMALSIDE%></td>
                </tr>
                <tr>
                    <th>CATEGORY</th>
                    <td><%=CATEGORY%></td>
                </tr>
                <tr>
                    <th>Sub-Category</th>
                    <td><%=SUBCATEGORY%></td>
                </tr>
                <tr>
                    <th>Initial-Balance</th>
                    <td><%=INITIALBALANCE%></td>
                </tr>
                <tr>
                    <th>Debit</th>
                    <td><%=DEBIT%></td>
                </tr>
                <tr>
                    <th>Credit</th>
                    <td><%=CREDIT%></td>
                </tr>
                <tr>
                    <th>Balance</th>
                    <td><%=BALANCE%></td>
                </tr>
                <tr>
                    <th>Doc</th>
                    <td><%=DOC%></td>
                </tr>
                <tr>
                    <th>Statement</th>
                    <td><%=STATEMENT%></td>
                </tr>
                <tr>
                    <th>Creator</th>
                    <td><%=USERNAME%></td>
                </tr>
                <tr>
                    <th>Comment</th>
                    <td><%=COMMENT%></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td><%=STATUS%></td>
                </tr>
            </table>
        </div>
        <h2>Edit Account</h2>
        <table id='table'>
            <th>Field</th>
            <th>Edit Field</th>
            <form id='form' onsubmit="return confirm('Do you really want to submit the form?');" method="POST" action=''>
                <tr>
                    <th>Name</th>
                    <td><%=NAME%></td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td><%=NUMBER%></td>
                </tr>
                <tr>
                <th>Description</th>
                <td class='formInput'><input name='Description'type="text" value=<%=DESCRIPTION %>></td>
            </tr> 
            <tr>
                <th>Normal Side</th>
                <td class='formInput'>
                    <select form='form' name='Normal'>
                        <option value='Credit'>Credit</option>
                        <option value='Debit'>Debit</option>
                    </select>
                </td>
            </tr>  
            <tr>
                <th>Category</th>
                <td class='formInput'>
                <select form='form' name='Category'>
                    <option value='Asset'>Asset</option>
                    <option value='Liability'>Liability</option>
                    <option value='Revenue'>Revenue</option>
                    <option value='Expense'>Expense</option>
                    <option value='Equity'>Equity</option>
                </select>
                </td>
            </tr>  
        <tr>
            <th>Sub-Category</th>
            <td class='formInput'><input name='Sub-Category' type="text"value=<%=SUBCATEGORY %>></td>
        </tr>
        <tr>
                <th>Initial Balance</th>
                <td class='formInput'><input name='Initial-Balance'type="number"value=<%=INITIALBALANCE %>></td>
        </tr>
        <tr>
            <th>Debit</th>
            <td class='formInput'><input name='Debit' type="number" value=<%=DEBIT %>></td>
        </tr>
        <tr>
            <th>Credit</th>
            <td class='formInput'><input name='Credit' type="number"value=<%=CREDIT %>></td>
        </tr>
        <tr>
            <th>Balance</th>
            <td><%=BALANCE%></td>
        </tr>
        <tr>
            <th>Doc</th>
            <td><%=DOC%></td>
        </tr>
        <tr>
            <th>Statement</th>
            <td class='formInput'>
                <select form='form' name='Statement'>
                    <option value='Income Statement'>Income Statement</option>
                    <option value='Balance Sheet'>Balance Sheet</option>
                </select>
            </td>
            </tr>
            <tr>
                <th>Creator</th>
                <td><%=USERNAME%></td>
            </tr>
        </tr>
        <tr>
            <th>Comment</th>
            <td class='formInput'><input name='Comment'type="text"value=<%=COMMENT %>></td>
        </tr>
        <th>Status</th>
            <td class='formInput'>
                <select form='form' name='Status'>
                    <option value='1'>Active</option>
                    <option value='0'>Decativated</option>
                </select>
            </td>
            <button type="submit">Submit</button>
            </form>
        </table>
    </div>
                       
   
</body>
</html>